<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/voice_order_name"
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:textSize="40sp"
            android:background="#5752b4"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="WHOPPER"
            />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/voice_order_image"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="200dp"
            android:src="@drawable/b8"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/voice_order_quantity"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="200dp"
            android:textSize="200sp"
            android:gravity="center"
            android:text="2"
            />

    </LinearLayout>

</LinearLayout>